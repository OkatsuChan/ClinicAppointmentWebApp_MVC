@model ClinicAppointment.Models.Appointment


<div class="bg-danger text-center p-4 rounded">
    <h4 class="mb-4" style="color: #d37afc;">Are you sure you want to delete this appointment?</h4>
    <div class="bg-light p-3 rounded mb-4">
        <h5 class="text-primary">@Model.Name</h5>
        <p><strong>Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
        <p><strong>Scheduled Time:</strong> @Model.Time</p>
        <p><strong>Patient Type:</strong> @(Model.IsOldPatient ? "Old" : "New")</p>
    </div>

    <form asp-action="DeleteConfirmed" class="d-inline-block">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn" style="background-color: #d37afc; color: white; border-radius: 50px; padding: 10px 20px; border: none;">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
</div>
