@model ClinicAppointment.Models.Appointment

<div class="bg-light text-center p-4 rounded">
    <h4 class="mb-4" style="color: #4a4a4a;">Are you sure you want to delete this appointment?</h4>
    <div class="bg-white p-3 rounded mb-4">
        <h5 style="color: #d37afc;">@Model.Name</h5>
        <p><strong>Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
        <p><strong>Scheduled Time:</strong> @Model.Time</p>
        <p><strong>Patient Type:</strong> @(Model.IsOldPatient ? "Old" : "New")</p>
    </div>

    <form asp-action="DeleteConfirmed" class="d-inline-block">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-outline-danger">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-outline-info">Cancel</a>
</div>
