@model IEnumerable<ClinicAppointment.Models.Appointment>

<div class="table-responsive mt-4">
    <table class="table table-striped table-hover">
        <thead style="background-color: #d37afc; color: white;">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Date</th>
                <th scope="col">Scheduled Time</th>
                <th scope="col">Old/New Patient</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Name</td>
                    <td>@appointment.PhoneNumber</td>
                    <td>@appointment.Date.ToShortDateString()</td>
                    <td>@appointment.Time</td>
                    <td>@(appointment.IsOldPatient ? "Old" : "New")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-outline-success btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a asp-action="Create" class="btn" style="background-color: #d37afc; color: white;">Create New Appointment</a>
</div>
