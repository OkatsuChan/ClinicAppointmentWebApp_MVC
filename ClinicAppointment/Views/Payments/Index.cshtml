@model IEnumerable<ClinicAppointment.Models.Payment>


<div class="d-flex justify-content-between mt-4">
    <div class="d-flex">
        <!-- Create Payment Button -->
        <a asp-action="CreatePayment" class="btn btn-outline-light me-2" style="background-color: #212529; color: white;">Create Payment</a>

        <!-- Report Transactions Button -->
        <button type="button" class="btn btn-outline-light" style="background-color: #212529; color: white;" data-bs-toggle="modal" data-bs-target="#reportModal">
            Report Transactions
        </button>
    </div>
</div>



<div class="table-responsive mt-4">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Patient Name</th>
                <th scope="col">Treatment Cost</th>
                <th scope="col">Amount Paid</th>
                <th scope="col">Change</th>
                <th scope="col">Amount Balance</th>
                <th scope="col">Type of Payment</th>
                <th scope="col">Old/New Patient</th>
                <th scope="col">Date Created</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.PatientName</td>
                    <td>@payment.TreatmentCost.ToString("C")</td>
                    <td>@payment.AmountPaid.ToString("C")</td>
                    <td>@payment.Change.ToString("C")</td>
                    <td>@payment.AmountBalance.ToString("C")</td>
                    <td>@payment.TypeofPayment</td>
                    <td>@(payment.IsOldPatient ? "Old Patient" : "New Patient")</td>
                    <td>@payment.CreatedDate.ToString("MM/dd/yyyy")</td>
                    <td class="text-center">
                        <a asp-action="DeletePayment" asp-route-id="@payment.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




<!-- Modal -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportModalLabel">Generate Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for Generating a Report for a Custom Date Range -->
                <form asp-controller="Payments" asp-action="GenerateReport" method="get">
                    <div class="mb-3">
                        <label for="startDate" class="form-label">Start Date:</label>
                        <input type="date" id="startDate" name="startDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="endDate" class="form-label">End Date:</label>
                        <input type="date" id="endDate" name="endDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="paymentOptions" class="form-label">Type of Payment:</label>
                        <select id="paymentOptions" name="paymentOptions" class="form-control" required>
                            @foreach (var paymentType in Enum.GetValues(typeof(PaymentType)).Cast<PaymentType>())
                            {
                                <option value="@paymentType">@paymentType</option>
                            }
                        </select>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn" style="background-color: #d37afc; color: white;">Generate Report</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
