@model IEnumerable<ClinicAppointment.Models.Payment>

<div class="table-responsive mt-4">
    <table class="table table-striped table-hover">
        <thead style="background-color: #d37afc; color: white;">
            <tr>
                <th scope="col">Patient Name</th>
                <th scope="col">Treatment Cost</th>
                <th scope="col">Amount Paid</th>
                <th scope="col">Amount Balance</th>
                <th scope="col">Old/New Patient</th>
                <th scope="col">Date Created</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.PatientName</td>
                    <td>@payment.TreatmentCost</td>
                    <td>@payment.AmountPaid</td>
                    <td>@payment.AmountBalance</td>
                    <td>@(payment.IsOldPatient ? "Old Patient" : "New Patient")</td>
                    <td>@payment.CreatedDate</td>
                    <td class="text-center">
                        <a asp-action="DeletePayment" asp-route-id="@payment.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a asp-action="CreatePayment" class="btn" style="background-color: #d37afc; color: white;">Create Payment</a>
</div>